// --------------------------------------------------------- //
// -----------------------  ベース  ------------------------ //
// --------------------------------------------------------- //
*
    margin 0
    padding 0
html
    font-family "PT Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    //"Abril Fatface"
    font-size 16px
    line-height 1.5
    color #1c1c1c
@media (min-width 38rem)
    html
        font-size 18px
body
    color #999
    background-color #191919
a
    color #5d7ba0
    text-decoration none
    strong
        color inherit
    &:hover
    &:focus
        text-decoration underline
// --------------------------------------------------------- //
// --------------------  メインカラム  --------------------- //
// --------------------------------------------------------- //
.franklin-content
    padding 5rem 5% 0 5%
    line-height 1.4rem
    a
        &:hover
            text-decoration underline
@media (min-width 768px)
    .content.container
        max-width 45rem
        margin 0 auto
    .franklin-content
        padding 7rem 5% 0 5%
header
    width 100%
    position fixed
    top 0
    left 0
    right 0
    padding 1rem 2rem
    display flex
    justify-content flex-end
.sidebar-button
    cursor pointer
.bar1
.bar2
.bar3
    width 2.5rem
    height .3rem
    border-radius 2px
    margin .4rem 0
.bar1
    background-color #67251e
.bar2
    background-color #2a6130
.bar3
    background-color #552c75
.page-foot
    font-size 80%
    text-align center
    margin-top 6rem
.copyright
    padding 1rem 0
    border-top 1px solid #333
// ------------------  メインカラム内部  ------------------- //
h1
h2
h3
h4
h5
h6
  font-weight bold
  //text-rendering: optimizeLegibility;
  a
    color #bbb
h2
    margin 8rem 0 1rem 0
h3
    font-size 1.2rem
    margin-top 2rem
.franklin-toc
    margin 2rem 0
    padding-left 2rem
    font-size .8rem
strong
    color #bbb
.example
    overflow hidden
    max-height 0
    transition max-height .2s ease-out
.example-btn
    text-align center
    cursor pointer
    user-select none
    margin-bottom 1rem
    &:hover
        background-color #31566b
        color #fff
*::selection 
    background-color #a95a2c
    color #fff
    text-decoration underline
////////////////////////////////////////////////////////////////
table
    margin-bottom 1rem
    border 1px solid #e5e5e5
    border-collapse collapse
td
th
    padding .3rem .6rem
    border 1px solid #444
tbody tr:nth-child(odd) td
tbody tr:nth-child(odd) th
    //background-color #f9f9f9
blockquote
    //background #eeeeee
    //border-left 7px solid #a8a8a8
    margin 1.5em 10px
    padding 0.5em 10px
    font-style italic
    p
        display inline
// --------------------  フットノート  --------------------- //
.eqref
    a
        color green
.bibref
    a
        color green
sup
    font-size 70%
    vertical-align super
    line-height 0
table.fndef
    margin 0
    margin-bottom 10px
.fndef
    tr
    td
        padding 0
        border 0
        text-align left
.fndef
    tr
        border-left 2px solid lightgray
.fndef
    td.fndef-backref
        vertical-align top
        font-size 70%
        padding-left 5px
.franklin-content
    .fndef
        td.fndef-content
            font-size 80%
            padding-left 10px
// --------------------------------------------------------- //
// --------------------  サイドカラム  --------------------- //
// --------------------------------------------------------- //
.sidebar
    width 16rem
    position fixed
    top 0
    left -17rem
    bottom 0
    background-color #1e1e1e
    box-shadow 0 0 1rem 0 #000
    transition left .5s cubic-bezier(.7,0,.3,1)
.sidebar-about
    width 100%
    margin 2rem 0
.top
    color #aaa
    font-size 2rem
    text-align center
.lead
    font-size .8rem
    text-align center
nav
    width 100%
    ul
        padding 0
    li
    ul
        list-style none
    a
        display block
        padding .2rem 1rem .2rem 1.5rem
        color #888
        &:hover
            background-color #1d7b80
            color #fff
            text-decoration none
.menu-child
    display none
    a
        padding-left 3rem
.menu-parent.active
    > a
        background-color #262626
    > .menu-child
        display block
        background-color #262626
