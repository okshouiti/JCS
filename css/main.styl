// --------------------------------------------------------- //
// -----------------------  KaTeX  ------------------------- //
// --------------------------------------------------------- //
body
    counter-reset eqnum
.katex
    font-size 1em !important
.katex-display
    .katex
        display inline-block
    &::after
        counter-increment eqnum
        content "(" counter(eqnum) ")"
        position relative
        float right
        padding-right 5px
// --------------------------------------------------------- //
// --------------------  highlight.js  --------------------- //
// --------------------------------------------------------- //
pre
    margin-top 1rem
code
    padding .1rem .3rem
    border-radius 2px
    font-size 90%
    color #8cccba
    background-color #282e31
.hljs
    font-family "Cica"
    display block
    color #ccc
    font-size .9rem
    line-height 1.1rem
    border-radius 8px
    padding 1rem 2rem
    overflow-x auto
.hljs-comment
.hljs-quote
    color #396d3d
    font-style italic
.hljs-keyword
.hljs-selector-tag
.hljs-subst
    color #c7629a
.hljs-literal
.hljs-number
.hljs-tag .hljs-attr
.hljs-template-variable
.hljs-variable
    color #0086b3
.hljs-doctag
.hljs-string
    color #b17746
.hljs-section
.hljs-selector-id
.hljs-title
    color #900
    font-weight bold
.hljs-subst
    font-weight normal
.hljs-class .hljs-title
.hljs-type
    color #458
    font-weight bold
.hljs-attribute
.hljs-name
.hljs-tag
    color #000080
    font-weight normal
.hljs-link
.hljs-regexp
    color #009926
.hljs-bullet
.hljs-symbol
    color #990073
.hljs-built_in
.hljs-builtin-name
    color #51bf91
.hljs-deletion
    background #fdd
.hljs-addition
    background #dfd
.hljs-emphasis
    font-style italic
.hljs-strong
    font-weight bold
.hljs-meta
.hljs-metas
.hljs-metap
    //font-weight bold
.hljs-meta
    color rgb(25, 179, 51)
.hljs-metas
    color red
.hljs-metap
    color rgb(51, 131, 231)